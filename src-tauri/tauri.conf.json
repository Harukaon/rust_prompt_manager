{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "提示词管理器",
  "version": "0.1.0",
  "identifier": "com.prompt-manager.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "提示词管理器",
        "width": 1000,
        "height": 650,
        "resizable": true,
        "center": true,
        "theme": "Dark"
      },
      {
        "label": "popup",
        "title": "快速插入",
        "url": "popup.html",
        "width": 300,
        "height": 400,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}